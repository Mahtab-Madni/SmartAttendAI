# SmartAttendAI Environment Configuration
# Copy this file to .env and fill in your values

# ============================================
# SERVER CONFIGURATION
# ============================================
SERVER_HOST=0.0.0.0
SERVER_PORT=8000
DEBUG=False
ENVIRONMENT=production

# CRITICAL: Generate a strong random SECRET_KEY for production
# Run: python -c "import secrets; print(secrets.token_urlsafe(32))"
SECRET_KEY=your-secret-key-change-this-in-production

# ============================================
# DATABASE CONFIGURATION (Choose one)
# ============================================
# For SQLite (Development):
DATABASE_TYPE=sqlite

# For PostgreSQL (Production - Railway):
# DATABASE_TYPE=postgresql
# DATABASE_URL=postgresql://postgres:PASSWORD@postgres.railway.internal:5432/railway
# Example: DATABASE_URL=postgresql://user:pass@host:5432/dbname

# ============================================
# TELEGRAM CONFIGURATION
# ============================================
# Get your bot token from BotFather (@BotFather on Telegram)
TELEGRAM_BOT_TOKEN=your-telegram-bot-token-here
TELEGRAM_ENABLED=True

# ============================================
# GEOFENCING CONFIGURATION
# ============================================
GEOFENCE_RADIUS_METERS=200
GPS_ACCURACY_THRESHOLD=50

# ============================================
# SESSION CONFIGURATION
# ============================================
SESSION_TIMEOUT_MINUTES=30
MAX_SESSIONS_PER_USER=3

# ============================================
# FEATURE FLAGS
# ============================================
LIVENESS_DETECTION_ENABLED=true
EMOTION_ANALYSIS_ENABLED=true
FRAUD_DETECTION_ENABLED=true

# ============================================
# LOGGING
# ============================================
LOG_LEVEL=INFO
