# SmartAttendAI Environment Configuration

# Server Configuration
SERVER_HOST=0.0.0.0
SERVER_PORT=8000
DEBUG=False
ENVIRONMENT=production
SECRET_KEY=your-secret-key-change-this-in-production

# Database Configuration
# Choose DATABASE_TYPE: 'sqlite' (development) or 'postgresql' (production)
DATABASE_TYPE=sqlite

# For SQLite (Development):
# If DATABASE_TYPE=sqlite, database will be stored at data/smartattend.db

# For PostgreSQL (Production):
# If DATABASE_TYPE=postgresql, you MUST set DATABASE_URL
# DATABASE_TYPE=postgresql
# DATABASE_URL=postgresql://username:password@hostname:port/database
# Example Railway PostgreSQL:
# DATABASE_URL=postgresql://postgres:password@postgres.railway.internal:5432/railway

# Telegram Bot Configuration
TELEGRAM_BOT_TOKEN=your-telegram-bot-token-here

# Geofencing Configuration
GEOFENCE_RADIUS_METERS=200
GPS_ACCURACY_THRESHOLD=50

# Session Configuration
SESSION_TIMEOUT_MINUTES=30

# Feature Flags
LIVENESS_DETECTION_ENABLED=true
EMOTION_ANALYSIS_ENABLED=true
FRAUD_DETECTION_ENABLED=true
